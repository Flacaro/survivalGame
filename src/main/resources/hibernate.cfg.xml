<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connessione al database -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/the_survival_game</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!-- Dialect per MySQL (cambia se usi un altro DBMS) -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Mostrare le query SQL in console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Abilitare la creazione automatica delle tabelle -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Registrare le entity -->
        <mapping class="com.survivalGame.model.Area"/>
        <mapping class="com.survivalGame.model.Checkpoint"/>
        <mapping class="com.survivalGame.model.Climate"/>
        <mapping class="com.survivalGame.model.CraftingCatalog"/>
        <mapping class="com.survivalGame.model.Enemy"/>
        <mapping class="com.survivalGame.model.Event"/>
        <mapping class="com.survivalGame.model.Game"/>
        <mapping class="com.survivalGame.model.Inventory"/>
        <mapping class="com.survivalGame.model.Map"/>
        <mapping class="com.survivalGame.model.Mode"/>
        <mapping class="com.survivalGame.model.Player"/>
        <mapping class="com.survivalGame.model.Resources"/>
        <mapping class="com.survivalGame.model.Skills"/>
        <mapping class="com.survivalGame.model.Attack"/>
    </session-factory>
</hibernate-configuration>